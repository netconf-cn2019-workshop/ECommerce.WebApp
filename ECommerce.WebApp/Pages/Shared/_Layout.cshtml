@model ECommerce.WebApp.Pages.PageModelBase
@Html.AntiForgeryToken()
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" crossorigin="anonymous">
    
    <title>@(ViewData["Title"] == null ? ".NET Core 云原生电商应用" : (ViewData["Title"] + " - .NET Core 云原生电商应用"))</title>
    <script>document.addEventListener("DOMContentLoaded", function (evt) { var a = document.querySelector('a.navbar-brand[href]'); var div = document.querySelector('div.jumbotron'); if(div && a && a.getAttribute('href') === '/'){ div.style.backgroundColor = '#800fc3'; div.style.color = 'white'; }}, false);</script> <style type="text/css"> a.navbar-brand[href='/']{ background: url(/assets/dotnet-robot.png); background-size: 30px;  background-repeat: no-repeat; padding-left: 30px; background-position: center left; }</style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">.NET Core 电商</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @Model.GetActive(ECommerce.WebApp.Pages.AppPage.Index)">
                    <a class="nav-link" href="/Index">商品 <span class="sr-only">(当前)</span></a>
                </li>

                <li class="nav-item @Model.GetActive(ECommerce.WebApp.Pages.AppPage.Basket)">
                    <a class="nav-link" href="/Basket">购物车 <span class="sr-only">(当前)</span></a>
                </li>

                <li class="nav-item @Model.GetActive(ECommerce.WebApp.Pages.AppPage.Orders)">
                    <a class="nav-link" href="/Orders">订单 <span class="sr-only">(当前)</span></a>
                </li>
            </ul>

            @if (Model.DisplaySearchBox)
            {

                <form method="post" class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" asp-for="SearchText">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">搜索</button>
                </form>
            }

        </div>
    </nav>

    <form method="post">
        @RenderBody()
    </form>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" crossorigin="anonymous"></script>
    
    <script src="~/js/Common.js"></script>
</body>
</html>